<div id="cardPreview">
  <div class="bg-white rounded-xl overflow-hidden shadow-2xl w-full
         sm:aspect-[3.375/2.125]
         h-auto min-h-fit
         max-w-[420px] mx-auto
         flex flex-col relative">

    <!-- Header -->
    <div class="bg-indigo-600 min-h-[4rem] flex items-center px-3 sm:px-4">
      <div class="h-9 w-9 sm:h-10 sm:w-10 bg-white/20 rounded-full flex-shrink-0 mr-3 overflow-hidden">
        <img src="<%= school.logo || defaultImage %>" class="w-full h-full object-cover">
      </div>

      <div class="text-white min-w-0">
        <h4 class="font-bold text-xs sm:text-sm leading-tight truncate">
          <%= school.name %>
        </h4>
        <p class="text-[0.6rem] sm:text-[0.65rem] opacity-80 leading-tight truncate">
          Excellence in Education
        </p>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 p-3 sm:p-4
             flex flex-col sm:flex-row
             gap-3 sm:gap-4">

      <!-- Photo -->
      <div class="w-20 h-24 sm:w-24 sm:h-28
               bg-gray-100 border border-gray-200 rounded-lg
               flex-shrink-0 overflow-hidden mx-auto sm:mx-0">
        <img id="cardPhoto" src="<%= student?.image || defaultImage %>" class="w-full h-full object-cover">
      </div>

      <!-- Details -->
      <div class="space-y-1.5 flex-1 min-w-0 text-center sm:text-left">

        <div>
          <p class="text-[0.55rem] text-gray-400 uppercase font-bold tracking-wider">
            Name
          </p>
          <p id="cardName" class="text-xs font-semibold text-gray-900 truncate uppercase">
            <%= student?.name || "Student Name" %>
          </p>
        </div>

        <div class="flex justify-center sm:justify-start gap-4 flex-wrap">
          <div>
            <p class="text-[0.55rem] text-gray-400 uppercase font-bold">Class</p>
            <p id="cardClass" class="text-xs font-semibold uppercase">
              <%= student?.className || "Class" %>
            </p>
          </div>

          <div>
            <p class="text-[0.55rem] text-gray-400 uppercase font-bold">D.O.B</p>
            <p id="cardDob" class="text-xs font-semibold uppercase">
              <%= student?.dob || "D.O.B" %>
            </p>
          </div>

          <div>
            <p class="text-[0.55rem] text-gray-400 uppercase font-bold">Phone</p>
            <p id="cardPhone" class="text-xs font-semibold uppercase">
              <%= student?.contactNumber || "9876543210" %>
            </p>
          </div>
        </div>

        <div>
          <p class="text-[0.55rem] text-gray-400 uppercase font-bold tracking-wider">
            Father's Name
          </p>
          <p id="cardfname" class="text-xs font-semibold uppercase truncate">
            <%= student?.fatherName || "Father's Name" %>
          </p>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="bg-indigo-50 px-3 sm:px-4 py-1.5 flex items-center justify-between
             text-[0.55rem] sm:text-[0.6rem]">
      <p class="text-indigo-800 font-medium truncate">
        Valid until: March 2025
      </p>

      <div class="w-12 h-4 flex-shrink-0 overflow-hidden">
        <img src="<%= school.principalSignature || defaultImage %>" class="w-full h-full object-contain">
      </div>
    </div>

  </div>
</div>