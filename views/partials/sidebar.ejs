                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="sidebar-text font-medium whitespace-nowrap text-base">Settings</span>
        </a>
    </nav>

    <!-- Logout -->
    <div class="p-4 border-t border-gray-100 mt-auto md:mt-0">
        <a href="/admin/logout"
            class="flex items-center space-x-3 text-white hover:text-gray-900 transition-colors bg-gray-50/50 p-2.5 rounded-xl hover:bg-gray-100">
            <div class="h-9 w-9 rounded-full bg-indigo-500 flex items-center justify-center flex-shrink-0 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
            </div>
            <div class="sidebar-text overflow-hidden">
                <p class="text-sm font-semibold text-gray-800 truncate">Logout</p>
                <p class="text-xs text-gray-500 truncate">
                    <%= user.email %>
                </p>
            </div>
        </a>
    </div>
</aside>

<script>
    const menuItems = document.querySelectorAll('.menu-item');
    const currentPath = window.location.pathname;

    menuItems.forEach(item => {
        const itemPath = item.getAttribute('href');

        if (itemPath === currentPath) {
            item.classList.add('active');
        }
    });
</script>