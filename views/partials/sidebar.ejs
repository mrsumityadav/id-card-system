<style>
    .menu-item.active {
        background-color: #EEF2FF !important;
        color: #4F46E5;
    }
</style>

<aside id="sidebar"
    class="fixed inset-0 z-40 bg-white text-gray-800 transition-transform duration-300 ease-in-out transform -translate-x-full md:translate-x-0 md:relative md:w-64 md:border-r md:border-gray-200 flex flex-col pt-16 md:pt-0">

    <!-- Desktop Toggle Button -->
    <button id="toggleSidebar"
        class="absolute -right-4 top-20 bg-white text-gray-500 border border-gray-100 rounded-full p-1.5 shadow-lg hover:bg-indigo-50 hover:text-indigo-600 focus:outline-none hidden md:flex items-center justify-center z-[100] transition-all duration-200 w-8 h-8 group hover:scale-110">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300" fill="none"
            viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
        </svg>
    </button>

    <!-- Logo Area (Desktop Only) -->
    <div class="hidden md:flex p-6 items-center space-x-3 overflow-hidden">
        <div class="py-1 rounded-lg flex-shrink-0">
            <img src="https://res.cloudinary.com/djsqx9sw7/image/upload/v1768241888/Logo_p6jtse.png" alt width="50">
        </div>
        <span class="sidebar-text font-bold text-2xl tracking-tight text-gray-900 whitespace-nowrap">ID Manager</span>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-4 space-y-2 mt-4 overflow-y-auto">
        <a href="/admin"
            class="menu-item flex items-center space-x-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 p-3 rounded-xl transition-all duration-200">
            <div class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-[22px] w-[22px] flex-shrink-0" fill="none"
