<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classes - ID Card Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Outfit', sans-serif;
        }
    </style>
</head>

<body class="bg-slate-50 text-slate-800">

    <!-- Mobile Header/Nav -->
    <%- include("../partials/adminHeader.ejs") %>

        <div class="flex h-screen overflow-hidden pt-16 md:pt-0">
            <!-- Sidebar / Mobile Full Menu -->
            <%- include("../partials/adminSidebar.ejs") %>

                <!-- Main Content -->
                <main class="flex-1 overflow-y-auto h-full bg-slate-50 p-6 md:p-10 transition-all duration-300">

                    <div class="max-w-7xl mx-auto">
                        <div class="flex flex-col md:flex-row md:items-center justify-between mb-8">
                            <div>
                                <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Select Class</h1>
                                <p class="text-gray-500 mt-1">Choose a class to print ID cards</p>
                            </div>
                            <div
                                class="mt-4 md:mt-0 flex items-center space-x-3 bg-white p-1 rounded-xl border border-gray-200 shadow-sm">
                                <div class="relative">
                                    <input type="text" placeholder="Search class..."
                                        class="pl-9 pr-4 py-2 rounded-lg text-sm text-gray-700 focus:outline-none w-full md:w-64">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                        class="h-4 w-4 absolute left-3 top-2.5 text-gray-400" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Classes Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                            <% classes.forEach(cls=> { %>
                                <div
                                    class="bg-white rounded-2xl shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 p-6 border border-gray-100 flex flex-col group relative overflow-hidden">

                                    <div class="flex items-center justify-between mb-4">
                                        <div
                                            class="h-12 w-12 rounded-xl bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-lg shadow-sm">
                                            <%= cls.className.length <=3 ? cls.className : cls.className[0] %>
                                        </div>

                                        <span
                                            class="bg-green-100 text-green-700 text-xs px-2.5 py-1 rounded-full font-medium">
                                            Active
                                        </span>
                                    </div>

                                    <h3 class="text-xl font-bold text-gray-900 mb-1">
                                        <%= cls.className.match(/^\d+$/) ? 'Class ' + cls.className : cls.className %>
                                    </h3>

                                    <div class="text-sm text-gray-500 space-y-1 mb-6">
                                        <p>Total Students:
                                            <span class="font-semibold text-gray-900">
                                                <%= cls.totalStudents %>
                                            </span>
                                        </p>
                                        <p>Submitted:
                                            <span class="font-semibold text-indigo-600">
                                                <%= cls.submittedCount %>
                                            </span>
                                        </p>
                                        <p>Printed:
                                            <span class="font-semibold text-green-600">
                                                <%= cls.printedCount %>
                                            </span>
                                        </p>
                                    </div>

                                    <a href="/superAdmin/print/class/<%= cls._id %>?schoolId=<%= schoolId %>"
                                        class="mt-auto w-full text-center bg-indigo-600 hover:bg-indigo-700 text-white py-2.5 rounded-xl text-sm font-semibold transition">
                                        View Students
                                    </a>
                                </div>
                                <% }) %>
                        </div>

                    </div>
                </main>
        </div>

        <%- include("../partials/adminHeaderLogic.ejs") %>

</body>

</html>